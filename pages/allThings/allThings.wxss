/* 页面容器 */
.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.header {
  position: fixed;
  top: 0%;
  left: 0%;
  right: 0%;
  background-color: #1E293B;
  color: white;
  z-index: 1000;
  height: 80rpx;
  width: 100%;
  padding-top: 5rpx; /* 为刘海屏等设备留出安全区域 */
  padding-bottom: 5rpx; /* 为刘海屏等设备留出安全区域 */

}


.tabs {
  display: flex;
  flex-direction: row;
  height: 100%; /* 继承父元素高度 */
  width: 100%;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  line-height: 80rpx; /* 与header高度一致 */
  font-size: 16px;
  position: relative;
  transition: all 0.3s;
  color: #9f9e9e;
}

.tab-item.active {
  color: white;
  font-weight: bold;
}



/* 筛选区域 */
.filter-container {
  position: fixed;
  top: 80rpx;
  left: 0;
  right: 0;
  background-color: white;
  padding: 20rpx;
  display: flex;
  align-items: center;
  z-index: 999;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);

}

.filter-content {
  flex: 1;
  display: flex;
  justify-content: space-between; /* 横向均匀分布 */
}

.filter-item {
  flex: 1;
  text-align: center;
  padding: 15rpx 0;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  margin-right: 20rpx;
  position: relative;
  font-size: 14px;
  color: #333;
}

.filter-item:last-child {
  margin-right: 0;
}

.filter-arrow {
  font-size: 12px;
  margin-left: 5rpx;
}

.search-icon {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}

.search-icon image {
  width: 40rpx;
  height: 40rpx;
}

/* 内容滚动区域 */
.content-scroll {
  flex: 1;
  margin-top: 290rpx;
  padding: 20rpx;
}

/* 球队卡片 */
.team-card {
  display: flex;
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.team-logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: white;
}

.team-info {
  flex: 1;
  margin-left: 25rpx;
}

.team-name {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15rpx;
}

.team-details {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}

.detail-item {
  display: flex;
  align-items: center;
  width: 50%;
  padding-right: 15rpx;
  margin-bottom: 20rpx;
  font-size: 14px;
  color: #666;
  box-sizing: border-box;
}

/* 偶数项特殊处理，确保右侧对齐 */
.detail-item:nth-child(2n) {
  padding-left: 15rpx;
  padding-right: 0;
}

.detail-icon {
  margin-right: 5rpx;
  font-size: 16px;
}

.favorite-btn {
  position: absolute;
  top: 30rpx;
  right: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.1);
  /* 添加点击反馈 */
  transition: background-color 0.2s;
}

.favorite-btn:active {
  background-color: rgba(255, 255, 255, 0.2);
}

/* 不再需要favorite-icon样式，因为使用van-icon组件 */

/* 底部空间，确保内容不被tabBar遮挡 */
.bottom-space {
  height: 120rpx;
}