/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
  width: 80%;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}

.avatar-wrapper {
  padding: 0;
  width: 56px !important;
  border-radius: 8px;
  margin-top: 40px;
  margin-bottom: 40px;
}

.avatar {
  display: block;
  width: 56px;
  height: 56px;
}

.nickname-wrapper {
  display: flex;
  width: 100%;
  padding: 16px;
  box-sizing: border-box;
  border-top: .5px solid rgba(0, 0, 0, 0.1);
  border-bottom: .5px solid rgba(0, 0, 0, 0.1);
  color: black;
}

.nickname-label {
  width: 105px;
}

.nickname-input {
  flex: 1;
}


/* pages/match/match.wxss */
.filter-bar {
  
  display: flex;
  padding: 16rpx 20rpx;
  background-color: #fff;
  gap: 12rpx; /* 筛选框之间的间距 */
  align-items: center;

  position: fixed; /* 固定定位，脱离正常文档流 */
  top: 0; /* 距离顶部0距离 */
  left: 0; /* 距离左侧0距离 */
  right: 0; /* 距离右侧0距离，实现宽度自适应屏幕 */
  z-index: 999; /* 提高层级，避免被其他内容遮挡 */
}

/* 筛选框样式 */
.filter-item {
  flex: 1; /* 三个筛选框平分宽度 */
}

.filter-content {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 60rpx; /* 圆角效果 */
  padding: 14rpx 0;
  font-size: 26rpx;
  color: #333;
}

/* 下拉箭头 */
.arrow-down {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 6rpx solid #666;
  margin-left: 8rpx;
}

/* 搜索按钮 */
.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}