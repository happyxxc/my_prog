/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #f5f5f5;
}

/* 主内容区域 */
.main-content {
  flex: 1;
  padding-top: 120rpx; /* 为筛选栏留出更多空间 */
  padding-bottom: 40rpx;
  /* 移除overflow-y: auto，让页面级的上拉触底事件能正常触发 */
}

/* 赛事列表容器 */
.match-list {
  padding: 20rpx; /* 减少整体内边距 */
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* 调整赛事卡片之间的垂直间距 */
}

/* 空数据提示样式 */
.empty-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
}

/* 赛事卡片样式 */
.match-card {
  background-color: #ffffff;
  border-radius: 20rpx; /* 增加圆角更美观 */
  overflow: hidden;
  position: relative;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08); /* 增强阴影效果 */
  transition: transform 0.2s, box-shadow 0.2s; /* 添加过渡效果 */
}

/* 卡片点击效果 */
.match-card:active {
  transform: scale(0.98); /* 点击时轻微缩小 */
}

/* 状态标签 */
.status-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  background-color: #ff0000;
  color: white;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  z-index: 10;
}

.status-badge.ended {
  background-color: #999999;
}

/* 赛事图片 */
.match-image {
  width: 100%;
  height: 280rpx; /* 稍微减少图片高度 */
  position: relative;
  overflow: hidden;
}

.match-image image {
  width: 100%;
  height: 100%;
  transition: transform 0.3s; /* 图片缩放过渡 */
}

/* 图片悬停效果 */
.match-card:active .match-image image {
  transform: scale(1.03); /* 点击时图片轻微放大 */
}

/* 赛事信息区域 */
.match-info {
  padding: 20rpx 24rpx;
  position: relative;
}

/* 赛事标题 */
.match-title {
  font-size: 34rpx; /* 稍微增大标题字号 */
  font-weight: bold;
  color: #222222;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

/* 赛事详情区域 */
.match-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx; /* 调整详情项之间的间距 */
}

/* 详情项 */
.detail-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.detail-icon {
  flex-shrink: 0;
  /* 移除固定宽高，让icon组件使用size属性控制大小 */
}

.detail-text {
  font-size: 28rpx;
  color: #666666;
  flex: 1;
  line-height: 1.5;
}

/* 收藏按钮 */
.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.95);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s;
}

/* 收藏按钮点击效果 */
.favorite-btn:active {
  background-color: rgba(240, 240, 240, 0.95);
  transform: scale(0.95);
}


/* pages/match/match.wxss */
.filter-bar {
  
  display: flex;
  padding: 16rpx 20rpx;
  background-color: #fff;
  gap: 12rpx; /* 筛选框之间的间距 */
  align-items: center;

  position: fixed; /* 固定定位，脱离正常文档流 */
  top: 0; /* 距离顶部0距离 */
  left: 0; /* 距离左侧0距离 */
  right: 0; /* 距离右侧0距离，实现宽度自适应屏幕 */
  z-index: 999; /* 提高层级，避免被其他内容遮挡 */
}

/* 筛选框样式 */
.filter-item {
  flex: 1; /* 三个筛选框平分宽度 */
}

.filter-content {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f5f5f5;
  border-radius: 60rpx; /* 圆角效果 */
  padding: 14rpx 0;
  font-size: 26rpx;
  color: #333;
}

/* 下拉箭头 */
.arrow-down {
  width: 0;
  height: 0;
  border-left: 6rpx solid transparent;
  border-right: 6rpx solid transparent;
  border-top: 6rpx solid #666;
  margin-left: 8rpx;
}

/* 搜索按钮 */
.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}