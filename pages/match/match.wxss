/* pages/match/match.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 100rpx;
}

/* 筛选栏样式 */
.filter-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #ffffff;
  padding: 16rpx 20rpx;
  border-bottom: 1px solid #eee;
}

.filter-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.filter-text {
  font-size: 28rpx;
  color: #333;
  padding: 8rpx 0;
}

.filter-item::after {
  content: "";
  position: absolute;
  right: -10rpx;
  top: 50%;
  transform: translateY(-50%) rotate(45deg);
  width: 8rpx;
  height: 8rpx;
  border-right: 2rpx solid #999;
  border-bottom: 2rpx solid #999;
}

.filter-item:last-child::after {
  display: none;
}

.search-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 赛事列表样式 */
.match-list {
  padding: 20rpx;
}

.match-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.match-img-container {
  position: relative;
  width: 100%;
  height: 320rpx;
}

.match-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

.status-upcoming {
  background-color: #ff5722;
}

.status-ended {
  background-color: #9e9e9e;
}

.favorite-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.match-info {
  padding: 24rpx;
}

.match-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.match-date, .match-location {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.match-date text, .match-location text {
  margin-left: 10rpx;
}

/* 底部导航样式 */
.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  border-top: 1px solid #eee;
}

.tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  font-size: 24rpx;
}

.tab-item.active {
  color: #ff5722;
}

.tab-item icon {
  margin-bottom: 8rpx;
}