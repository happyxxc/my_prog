/* pages/matchDetail/matchDetail.wxss */

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #666;
}

/* 整体容器 */
.match-detail-container {
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 2. 赛事图片 */
.banner-container {
  width: 100%;
  overflow: hidden;
  background-color: #eee;
}

.banner-image {
  width: 100%;
  height: auto;
  display: block;
}

/* 3. 赛事标题 */
.match-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding: 30rpx;
  background-color: #fff;

  line-height: 1.4;
}

/* 4. 赛事详细信息（2×2矩阵） */
.detail-info {
  background-color: #fff;
  padding: 20rpx;

}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 25rpx 20rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

.info-icon {
  color: #64748b;
  margin-right: 15rpx;  
  width: 40rpx;
  text-align: center;
  font-size: 32rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 5. 报名按钮 */
.register-section {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 10rpx;
}

.register-btn {
  background-color: #0c0e0e;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 100rpx;
  border-radius: 40rpx;
  width: 100%;
  border: none;
}

/* 6. 赛程安排标题 */
.section-title {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  overflow: visible;
}

.section-title .info-icon {
  width: 40rpx;
  height: 40rpx;
  color: #64748b;
  font-size: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 7. 赛程安排内容 */
.schedule-section {
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx;
  margin-bottom: 10rpx;
}

.schedule-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  background-color: #fafafa;
}

.schedule-item:last-child {
  margin-bottom: 0;
}

.schedule-left {
  flex: 1;
}

.schedule-phase {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.schedule-time {
  font-size: 26rpx;
  color: #666;
}

.schedule-date {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-left: 20rpx;
}

/* 8. 参赛队伍标题 */
.teams-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;

}

.teams-header .info-icon {
  width: 40rpx;
  height: 40rpx;
  color: #64748b;
  font-size: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.teams-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.teams-count {
  font-size: 26rpx;
  color: #999;
}

/* 9. 参赛队伍列表（3列排布） */
.teams-section {
  background-color: #fff;
  padding: 20rpx 30rpx 30rpx;
}

.teams-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20rpx;
}

.team-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
}

.team-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #e9f1fa;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #1989fa;
  margin-bottom: 15rpx;
}

.team-name {
  font-size: 26rpx;
  color: #333;
  text-align: center;
  line-height: 1.3;
  padding: 0 10rpx;
}

/* 无数据状态 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  padding: 20rpx;
  text-align: center;
}

.back-btn {
  margin-top: 30rpx;
  background-color: #1989fa;
  color: white;
}

/* 适配小屏幕 */
@media (max-width: 320px) {
  .info-grid {
    grid-template-columns: 1fr;
  }
  
  .teams-grid {
    grid-template-columns: 1fr 1fr;
  }
}